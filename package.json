{
  "name": "@my-project/dev",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "prettier:test",
    "core:install": "cd ./core && npm install",
    "core:build": "cd ./core && npm run build",
    "core:start": "cd ./core && npm start",
    "server:install": "cd ./server && npm install",
    "server:start": "cd ./server && npm start",
    "postinstall": "npm run core:install && npm-run-all -p server:install",
    "prettier:test": "prettier --config ./.prettierrc --list-different \"{core,server,react-app}/**/*.{ts*,md,css}\"",
    "prettier:watch": "onchange \"**/*.ts*\" \"**/*.md*\" \"**/*.css*\" -- prettier --write {{changed}}",
    "prettier": "prettier --config ./.prettierrc --write  \"{core,server,react-app}/**/*.{ts*,md,css}\"",
    "start": "npm run core:build && npm-run-all -p core:start server:start prettier:watch"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "onchange": "^4.0.0",
    "prettier": "^1.12.1",
    "remove-node-modules": "^1.7.2"
  }
}
